import os

gitignore_content = """
# Built application files
*.apk
*.ap_

# Files for the ART/Dalvik VM
*.dex

# Java class files
*.class

# Generated files
gen/
out/

# Gradle files
.gradle/
build/

# Local configuration file (sdk path, etc)
local.properties

# AVD/emulator files
.android/avd/

# Android Studio files
.idea/workspace.xml
.idea/libraries/
.idea/modules.xml
.idea/navEditor.xml
.idea/assetWizardSettings.xml
.idea/gradle.xml
.idea/tasks.xml
.idea/vcs.xml
.idea/dictionaries

# Mac specific files
.DS_Store
# Windows specific files
Thumbs.db

# Crashlytics files
crashlytics-build.properties

# Keystore files
*.keystore

# External native build files
.externalNativeBuild/

# Kotlin stubs
*.klib

# Room schema files
*.json

# Gradle wrapper
!gradlew
!gradlew.bat
.gradle-wrapper

# Git LFS files
*.lfs

# Android Studio build configuration
.idea/compiler.xml

# Android Studio local build configuration
.idea/runConfigurations.xml

# Android Studio caches
.idea/caches/

# Android Studio generated files
.idea/generated/

# Android Studio test results
.idea/testResults/

# Android Studio UI designer files
.idea/uiDesigner.xml

# Android Studio local history
.idea/shelf/

# Android Studio inspection profiles
.idea/inspectionProfiles/

# Android Studio copyright profiles
.idea/copyright/

# Android Studio code style profiles
.idea/codeStyles/

# Android Studio external libraries
.idea/libraries/

# Android Studio user dictionaries
.idea/dictionaries/

# Android Studio task files
.idea/tasks.xml

# Android Studio vcs configuration
.idea/vcs.xml

# Android Studio gradle configuration
.idea/gradle.xml

# Android Studio asset wizard settings
.idea/assetWizardSettings.xml

# Android Studio navigation editor settings
.idea/navEditor.xml

# Android Studio gitignore
.idea/gitignore

# Android Studio build configuration (Kotlin)
