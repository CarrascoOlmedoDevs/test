# Android Studio external annotations
.idea/external_annotations.xml

# Android Studio data sources
.idea/dataSources/

# Android Studio deployment configurations
.idea/deploymentTargetDropDown.xml

# Android Studio device manager configurations
.idea/device_manager_settings.xml

# Android Studio profiler settings
.idea/profiler/

# Android Studio template data
.idea/templateData/

# Android Studio version control history
.idea/workspace.xml

# Android Studio build-specific files
captures/
"""

def generate_android_gitignore():
    """Generates a standard .gitignore file for an Android project."""
    file_path = ".gitignore"
    try:
        with open(file_path, "w") as f:
            f.write(gitignore_content)
        print(f"Generated standard Android .gitignore file at {file_path}")
    except IOError as e:
        print(f"Error writing .gitignore file: {e}")

if __name__ == "__main__":
    generate_android_gitignore()